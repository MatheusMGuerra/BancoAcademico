ALTER TABLE conta ALTER COLUMN saldo SET DEFAULT 0.00;
ALTER TABLE conta ADD CHECK (saldo >= 0);
drop table if exists cliente cascade 
drop table if exists conta cascade
create table cliente (
       cpf varchar(11) not null,
        data_nasc timestamp(6),
        nome varchar(255),
        primary key (cpf)
        );

create table conta (
       numero bigint generated by default as identity,
        agencia varchar(255),
        saldo decimal(19,2),
        status boolean not null,
        cpf_cliente varchar(11),
        primary key (numero)
    );
alter table if exists conta 
       add constraint FK8gni25vhuaa8cfew1ir02txis 
       foreign key (cpf_cliente) 
       references cliente;
